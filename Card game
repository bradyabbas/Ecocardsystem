<body>
  <header>
    <h1>Ecosystem Card Game - Tundra vs Jungle</h1>
  </header>
  <div class="game-container">
    <div class="player-area" id="player">
      <div class="player-title">Your Biome</div>
      <div class="card-row" id="player-cards"></div>
      <button onclick="playRandomCard('player')">Play Random Card</button>
    </div>
    <div class="player-area" id="opponent">
      <div class="player-title">Opponent's Biome</div>
      <div class="card-row" id="opponent-cards"></div>
      <button onclick="playRandomCard('opponent')">Opponent Plays Card</button>
    </div>
  </div>

  <script>
    const tundraDeck = [
      { name: "Arctic Poppy", type: "Producer", color: "tundra" },
      { name: "Arctic Hare", type: "Primary Consumer", color: "tundra" },
      { name: "Emperor Penguin", type: "Secondary Consumer", color: "tundra" },
      { name: "Polar Bear", type: "Apex Predator", color: "tundra" }
    ];

    const jungleDeck = [
      { name: "Banana Tree", type: "Producer", color: "jungle" },
      { name: "Macaw", type: "Primary Consumer", color: "jungle" },
      { name: "Jaguar", type: "Secondary Consumer", color: "jungle" },
      { name: "Bengal Tiger", type: "Apex Predator", color: "jungle" }
    ];

    function playRandomCard(player) {
      const cardDeck = player === 'player' ? tundraDeck : jungleDeck;
      const card = cardDeck[Math.floor(Math.random() * cardDeck.length)];
      const container = document.getElementById(`${player}-cards`);
      const cardDiv = document.createElement('div');
      cardDiv.className = `card ${card.color}`;
      cardDiv.innerHTML = `<strong>${card.name}</strong><br>${card.type}`;
      container.appendChild(cardDiv);
    }
  </script>
</body>
